#!/usr/bin/env bash
# Bash script to display "Best School" 10 times using a while loop

# Initialize a counter
counter=0

# While loop to display "Best School" as long as the counter is less than 10
while [ $counter -lt 10 ]; do
    # Display "Best School"
    echo "Best School"

    # Increment the counter
    ((counter++))
done
